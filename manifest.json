{
  "manifest_version": 3,
  "name": "LeetCode Monaco Editor Injector",
  "version": "0.2.1",
  "description": "Replaces the LeetCode editor with Monaco Editor (Locally Bundled).",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/problems/*"],
      "js": ["content_scripts/leetcode_injector.js"],
      "css": ["content_scripts/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/monaco-editor/min/*",
        "lib/monaco-editor/min/vs/editor/editor.worker.js"
        ],
      "matches": ["*://*.leetcode.com/*"]
    }
  ]
}